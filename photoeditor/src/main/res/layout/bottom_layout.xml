<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/bottom_item_selector"
        android:layout_width="match_parent"
        android:layout_height="57dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/rotate_layout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center"
            android:weightSum="4">
            <ImageView
                android:id="@+id/rotate_hor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/horizontal"/>
            <ImageView
                android:id="@+id/rotate_ver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/vertical"/>
            <ImageView
                android:id="@+id/rotate_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/left_rotate"/>
            <ImageView
                android:id="@+id/rotate_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/right_rotate"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/effect"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/effect"
            android:gravity="center"
            android:text="@string/effect"
            android:textColor="#ffffffff"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/crop"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/crop"
            android:gravity="center"
            android:text="@string/crop"
            android:textColor="#ffffffff"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/rotate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/rotate"
            android:gravity="center"
            android:text="@string/photo_editor_rotate"
            android:textColor="#ffffffff"
            android:textSize="9sp"/>
    </LinearLayout>
</LinearLayout>