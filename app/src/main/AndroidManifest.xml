<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yd.picmaker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.yd.picmaker.PicMakerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoCollage">

        <activity
            android:name="com.yd.picmaker.activity.StartPageActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yd.picmaker.activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
        </activity>
        <activity android:name="com.yd.picmaker.activity.BaseActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.yd.picmaker.activity.FreePhotoEditActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.yd.picmaker.activity.GalleryAlbumActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.GalleryAlbumFragment"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.TemplateActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.TemplateDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.BaseTemplateDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.BasePhotoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.photoeditor.ui.activity.BaseActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.photoeditor.ui.activity.ImageProcessingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.SaveResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.SaveOneActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.picmaker.activity.ExitActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
    </application>

</manifest>