<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eptonic.photocollage">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.eptonic.photocollage.PhotoCollageApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoCollage">

        <activity
            android:name=".ui.next.s.xx.xxx.yy.cc.activity.FirstActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.next.s.xx.xxx.yy.cc.activity.MainActivityPhotoCollage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".ui.next.s.xx.xxx.yy.cc.activity.PCFreelyEditActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.next.s.xx.xxx.yy.cc.activity.GalleryActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.GalleryAlbumFragment"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.FrameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.TemplateActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.FrameDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.yd.photoeditor.ui.activity.ImageProcessingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.PSaveRActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.WatchSaveActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.ExitActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".ui.next.s.xx.xxx.yy.cc.activity.TemplateDetailActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
    </application>

</manifest>