<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhotoCollage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teel_200</item>
        <item name="colorSecondaryVariant">@color/teel_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GalleryAlbumFragment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teel_200</item>
        <item name="colorSecondaryVariant">@color/teel_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="custom_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="gallery_album_text_title">
        <item name="android:textSize">13.3sp</item>
        <item name="android:textColor">#094873</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="gallery_album_text_count">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#9CC7E6</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
</resources>